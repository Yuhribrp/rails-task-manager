<div class="container">
<header>
<h2><%= @task.title %> </h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
</header>
</div>
<div class="buttons">
<%= link_to 'Back to Tasks', tasks_path, class:"btn btn-primary"%>
<%= link_to 'Edit a Task', task_edit_path(@task), class:"btn btn-primary"%>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-danger"%>
</div>
